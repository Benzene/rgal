<h1 id="name"><%= @tag.name %></h1>

<script type="text/javascript">
	$(document).ready(function() {
		$("h1").editable(function(value, settings) {
			$.post("/t/<%= @tag.id %>/e", { name: value }, function(data) {
				if (data.id != <%= @tag.id %>)
				{
					window.location = data.url;
				}
			}, "json");

			return value;
  		}, {
			tooltip : "Click to edit...",
			onblur : 'submit',
		});
	});
</script>

